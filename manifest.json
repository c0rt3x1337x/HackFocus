{
  "manifest_version": 2,
  "name": "HackFocus",
  "version": "1.0.0",
  "description": "Stay productive with Pomodoro technique in a hacker-themed environment",
  
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "tabs",
    "<all_urls>"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "HackFocus - Mission Control",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "options_page": "options.html",
  
  "web_accessible_resources": [
    "blocked.html"
  ],
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
